<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Employee Module - Unified Dashboard" style="-fx-text-fill: #333333;">
        <font>
            <Font size="22.0" />
        </font>
    </Label>
    <Separator />

    <TitledPane animated="false" text="âŒš Clock In/Out &amp; Working Hours Calculation" collapsible="false">
        <VBox spacing="10.0" style="-fx-padding: 10;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="btnClockIn" text="Clock In Now" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="btnClockOut" text="Clock Out Now"  disable="true" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
                <Label fx:id="lblCurrentStatus" text="Status: Logged Out" style="-fx-font-weight: bold; -fx-text-fill: #007bff;" HBox.hgrow="ALWAYS" />
            </HBox>
            <Label text="Monthly Attendance Record:" />
            <TableView fx:id="attendanceTable" prefHeight="150.0">
                <columns>
                    <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                    <TableColumn fx:id="colInTime" prefWidth="100.0" text="Clock In" />
                    <TableColumn fx:id="colOutTime" prefWidth="100.0" text="Clock Out" />
                    <TableColumn fx:id="colDailyHours" prefWidth="100.0" text="Hours Worked" />
                </columns>
            </TableView>
            <Label fx:id="lblTotalMonthlyHours" text="Total Monthly Hours: 0.0" style="-fx-font-weight: bold; -fx-text-fill: #009688;" />
        </VBox>
    </TitledPane>

    <TitledPane animated="false" text="ðŸ“‹ Assigned Tasks (View &amp; Complete)" collapsible="false">
        <VBox spacing="10.0" style="-fx-padding: 10;">
            <Label text="Check the box when the task is finished (e):" />
            <TableView fx:id="tasksTable" prefHeight="150.0">
                <columns>
                    <TableColumn fx:id="colTaskName" prefWidth="250.0" text="Task Name" />
                    <TableColumn fx:id="colProject" prefWidth="100.0" text="Project" />
                    <TableColumn fx:id="colDueDate" prefWidth="120.0" text="Due Date" />
                    <TableColumn fx:id="colTaskCompleted" prefWidth="70.0" text="Done" />
                </columns>
            </TableView>
        </VBox>
    </TitledPane>

    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <TitledPane animated="false" text="ðŸ–ï¸ Request Vacation" HBox.hgrow="ALWAYS" collapsible="false">
            <VBox spacing="8.0" style="-fx-padding: 10;">
                <Label text="Start Date:" />
                <DatePicker fx:id="dpStartDate" />
                <Label text="End Date:" />
                <DatePicker fx:id="dpEndDate" />
                <Label text="Reason:" />
                <TextArea fx:id="txtVacationReason" prefRowCount="3" wrapText="true" />
                <Button text="Submit Request" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            </VBox>
        </TitledPane>

        <TitledPane animated="false" text="ðŸš¨ View Penalties" HBox.hgrow="ALWAYS" collapsible="false">
            <VBox spacing="10.0" style="-fx-padding: 10;">
                <Label text="Recorded Penalties:" />
                <TableView fx:id="penaltiesTable" prefHeight="170.0">
                    <columns>
                        <TableColumn fx:id="colPenaltyDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colPenaltyReason" prefWidth="150.0" text="Reason" />
                        <TableColumn fx:id="colPenaltyAmount" prefWidth="80.0" text="Amount (USD)" />
                    </columns>
                </TableView>
            </VBox>
        </TitledPane>
    </HBox>

</VBox>